---
import Footer from "../components/Footer.astro";

export interface Props {
    title?: string;
 }

 const { title = 'Stormchaser Hochfranken'} = Astro.props as Props;
---

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" href="/img/favicon.png" sizes="32x32" />
    <title>{title}</title>
</head>

<body class="flex h-screen">
<!-- Sidebar -->
<div class="w-1/3 bg-cover bg-center flex-none" style="background-image: url('/img/sunset.jpg')">
    <!-- Sidebar content -->
    <div class="flex justify-center">
        <img src="/img/logo.png" alt="Logo" class="mx-10">
    </div>
    <div class="p-4">

    </div>
</div>

<!-- Main Content -->
<div class="flex-1 overflow-scroll" >
    <!-- Main content goes here -->
    <slot />
    <Footer />
</div>

</body>
</html>