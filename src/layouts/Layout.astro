---
import Footer from "../components/Footer.astro";

// Supports weights 400-700
import '@fontsource-variable/lora';
import '../styles/global.css'
import SocialMedia from "../components/SocialMedia.astro";

export interface Props {
    title?: string;
 }

 const { title = 'Stormchaser Hochfranken'} = Astro.props as Props;
---

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" href="/img/favicon.png" sizes="32x32" />
    <title>{title}</title>
</head>

<body class="flex h-screen">
<!-- Sidebar -->
<div class="w-1/3 bg-cover bg-center flex flex-col" style="background-image: url('/img/sunset.jpg')">
    <!-- Sidebar content -->
    <div class="flex justify-center">
        <img src="/img/logo.png" alt="Logo" class="mx-10">
    </div>
    <div class="text-center mt-20">
        <h1 class="text-white text-3xl font-bold">Wettergeschehen in Nordostbayern</h1>
        <p class="text-white text-xl">Landkreise Hof und Wunsiedel</p>
    </div>
    <div class="flex grow"></div>
    <div class="flex justify-center my-10">
        <SocialMedia />
    </div>
</div>

<!-- Main Content -->
<div class="flex-1 overflow-scroll" >
    <!-- Main content goes here -->
    <slot />
    <Footer />
</div>

</body>
</html>